<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>ai.agents.notion.worker</string>

    <key>ProgramArguments</key>
    <array>
      <string>/usr/local/bin/python3</string>
      <string>/Users/matheuszimmermannai/agents/runner/notion_worker.py</string>
    </array>

    <!-- roda a cada 30 minutos -->
    <key>StartInterval</key>
    <integer>1800</integer>

    <key>RunAtLoad</key>
    <true/>

    <key>EnvironmentVariables</key>
    <dict>
      <key>SSL_CERT_FILE</key>
      <string>/usr/local/lib/python3.14/site-packages/certifi/cacert.pem</string>
    </dict>

    <key>StandardOutPath</key>
    <string>/Users/matheuszimmermannai/agents/runner/logs/notion.worker.out</string>
    <key>StandardErrorPath</key>
    <string>/Users/matheuszimmermannai/agents/runner/logs/notion.worker.err</string>
  </dict>
</plist>
